{% extends 'base.html.twig' %}

{% block title %}Category
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-12 col-lg-8">
			<div class="card shadow-sm mb-4">
				<div class="card-body">
					<h1 class="card-title h3 mb-4">{{ category.name }}</h1>
					<p class="text-muted">
						<small>
							<strong>ID:</strong>
							{{ category.id }}</small>
					</p>
				</div>
			</div>
		</div>
		<div class="col-12 col-lg-4">
			<div class="card shadow-sm">
				<div class="card-header bg-light">
					<h5 class="mb-0">Actions</h5>
				</div>
				<div class="card-body">
					<div class="d-grid gap-2">
						<a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning">
							<i class="bi bi-pencil"></i>
							Edit</a>
						<a href="{{ path('app_category_index') }}" class="btn btn-secondary">
							<i class="bi bi-arrow-left"></i>
							Back to list</a>
					</div>
				</div>
			</div>

			{% if (app.user.roles[0] == 'ROLE_ADMIN')%}
				<div class="card shadow-sm mt-3 border-danger">
					<div class="card-header bg-danger text-white">
						<h5 class="mb-0">Danger Zone</h5>
					</div>
					<div class="card-body">
						{{ include('category/_delete_form.html.twig') }}
					</div>
				</div>
			{% endif %}
		</div>
	</div>
{% endblock %}
