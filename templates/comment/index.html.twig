{% extends 'base.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3">Comments</h1>
        <a href="{{ path('app_comment_new') }}" class="btn btn-primary">Create new</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Content</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for comment in comments %}
                        <tr>
                            <td class="text-truncate" style="max-width:300px">{{ comment.content }}</td>
                            <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d') : '' }}</td>
                            <td>
                                <a href="{{ path('app_comment_show', {'id': comment.id}) }}" class="btn btn-sm btn-outline-secondary me-1">Show</a>
                                <a href="{{ path('app_comment_edit', {'id': comment.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center py-4">No records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
